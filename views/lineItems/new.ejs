<%- include('../partials/header') %>

<h2>New Transaction</h2>

<form action="/balances/<%= balanceId %>/line-items" method="POST" autocomplete="off">

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" class="form-control" required />
    </div>

    <div id="transactionType-radios" class="form-group">
        <label class="d-block">Transaction Type</label>
        <div class="form-check form-check-inline">
            <label class="form-check-label">
                <input class="form-check-input" type="radio" name="transactionType" value="Withdrawal" checked>
                Withdrawal
            </label>
        </div>
        <div class="form-check form-check-inline">
            <label class="form-check-label">
                <input class="form-check-input" type="radio" name="transactionType" value="Deposit"> Deposit
            </label>
        </div>
    </div>

    <div id="bill-select">
        <div class="form-group">
            <label for="bill">Bill</label>
            <select name="bill" id="bill" class="custom-select">
                <option value="">None</option>
                <% if(bills.length > 0) { %>
                <% bills.forEach(bill => { %>
                <option value="<%= bill.id %>">
                    <%= bill.name %>
                </option>
                <% }); %>
                <% } %>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="transactionAmount">Transaction Amount</label>
        <input type="text" name="transactionAmount" id="transactionAmount" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="notes">Notes</label>
        <textarea name="notes" id="notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mb-3">Add Line Item</button>
</form>

<p><a href="/balances/<%= balanceId %>">Go Back</a></p>

<%- include('../partials/footer') %>